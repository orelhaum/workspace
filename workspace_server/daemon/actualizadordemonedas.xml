<service>
	<id>actualizadordemonedas.exe</id>
	<name>Actualizador de Monedas</name>
	<description>Servicio que actualiza el valor de las monedas</description>
	<executable>C:\Program Files\nodejs\node.exe</executable>
	<logmode>rotate</logmode>
	<argument>--harmony</argument>
	<argument>C:\workspace\workspace_server\node_modules\node-windows\lib\wrapper.js</argument>
	<argument>--file</argument>
	<argument>C:\workspace\workspace_server\index.js</argument>
	<argument>--log</argument>
	<argument>Actualizador de Monedas wrapper</argument>
	<argument>--grow</argument>
	<argument>0.25</argument>
	<argument>--wait</argument>
	<argument>1</argument>
	<argument>--maxrestarts</argument>
	<argument>3</argument>
	<argument>--abortonerror</argument>
	<argument>n</argument>
	<argument>--stopparentfirst</argument>
	<argument>undefined</argument>
	<stoptimeout>30sec</stoptimeout>
	<workingdirectory>C:\workspace\workspace_server</workingdirectory>
</service>